import "./LockWithHeight"

contract ImportWithHeight(agency, sender, recipient: Program, switchHeight, blockHeight: Integer) locks valueAmount of valueAsset {
  clause redeem() {
    verify below(switchHeight)
    lock valueAmount of valueAsset with agency
  }
  clause switch() {
    verify above(switchHeight)
    lock valueAmount of valueAsset with LockWithHeight(sender, recipient, blockHeight)
  }
}